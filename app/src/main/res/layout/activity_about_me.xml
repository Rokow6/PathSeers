<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_button"
        android:contentDescription="Back"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About me"
        android:textSize="24sp"
        android:textColor="#001F11"
        android:layout_gravity="start"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp" />

    <!-- Full Name Input -->
    <TextView
        android:id="@+id/fullname_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="14sp"
        android:textColor="#001F11"
        android:layout_marginBottom="4dp"
        android:labelFor="@id/fullname_input" /> <!-- Links the label to the EditText -->

    <EditText
        android:id="@+id/fullname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColor="#001F11"
        android:layout_marginBottom="16dp"
        android:contentDescription="First name input field" /> <!-- Optional for additional accessibility -->


    <!-- Headline Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Headline"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tell us about yourself"
        android:maxLength="100"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optional"
        android:textSize="12sp"
        android:textColor="#808080"
        android:gravity="end"
        android:layout_marginBottom="8dp" />

    <!-- Location Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add your city and state"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Willing to Relocate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I’m willing to relocate"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/relocate_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/relocate_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <RadioButton
            android:id="@+id/relocate_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="14sp" />
    </RadioGroup>

    <!-- Willing to Work Remote -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I’m willing to work remote"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/remote_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/remote_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <RadioButton
            android:id="@+id/remote_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="14sp" />
    </RadioGroup>

    <!-- Save Button -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16sp"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</LinearLayout>
