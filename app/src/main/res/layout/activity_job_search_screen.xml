<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_marginTop="45dp"
    tools:context=".JobSearchScreen">

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/sv_search_job"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_edit_text_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Filter Options -->
    <LinearLayout
        android:id="@+id/filter_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/search_edit_text_background"
            android:text="Pay"
            android:textColor="#00796B"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_hours"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/search_edit_text_background"
            android:text="Hours"
            android:textColor="#00796B"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_experience"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/search_edit_text_background"
            android:text="Experience"
            android:textColor="#00796B"
            android:textSize="14sp" />

        <!-- Filter Icon Button -->
        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_search"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="Filter"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <!-- Job List (RecyclerView to display multiple jobs) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewJobs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>
