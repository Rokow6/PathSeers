<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What brings you here today?"
        android:textSize="18sp"
        android:textColor="#001F11"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Radio Buttons -->
    <RadioGroup
        android:id="@+id/option_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm looking for a job right now"
            android:textColor="#001F11"
            android:buttonTint="#00796B"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm looking for a job, but no rush"
            android:textColor="#001F11"
            android:buttonTint="#00796B"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm just browsing"
            android:textColor="#001F11"
            android:buttonTint="#00796B" />
    </RadioGroup>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#001F11"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Next Button -->
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#E0F2F1"
            android:textColor="#00796B"
            android:paddingHorizontal="24dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>


</LinearLayout>
