<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the minimum you want to make?"
        android:textSize="18sp"
        android:textColor="#001F11"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Toggle Buttons (Yearly/Hourly) -->
    <RadioGroup
        android:id="@+id/pay_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/yearly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yearly"
            android:buttonTint="#00796B"
            android:textColor="#001F11"
            android:layout_marginEnd="16dp" />

        <RadioButton
            android:id="@+id/hourly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly"
            android:buttonTint="#00796B"
            android:textColor="#001F11" />
    </RadioGroup>

    <!-- Input Field -->
    <TextView
        android:id="@+id/minimum_pay_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired Minimum Pay"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#001F11"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/minimum_pay_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="$0"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:background="@drawable/edit_text_background"
        android:textColor="#001F11"
        android:layout_marginBottom="16dp" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#001F11"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Next Button -->
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#E0F2F1"
            android:textColor="#00796B"
            android:paddingHorizontal="24dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>


</LinearLayout>
